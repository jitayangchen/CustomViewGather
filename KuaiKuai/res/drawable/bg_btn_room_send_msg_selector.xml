    <item android:state_focused="false" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/btn_room_send_msg_normal" />
    <item android:state_focused="false" android:state_selected="true" android:state_pressed="false" android:drawable="@drawable/btn_room_send_msg_selected" />

    <!-- Focused states -->
    <item android:state_focused="true" android:state_selected="false" android:state_pressed="false" android:drawable="@drawable/btn_room_send_msg_selected" />
