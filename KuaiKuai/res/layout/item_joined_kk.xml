<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dip"
    android:background="@color/white" >
    
    <RelativeLayout
        android:id="@+id/rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    
	    <TextView
	        android:id="@+id/tv_area"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_centerVertical="true"
	        android:text="@string/nation_wide"
	        android:textColor="@color/pink"
	        android:textSize="@dimen/text_size_17sp" />
	    
	    <TextView
	        android:id="@+id/tv_date"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="50dip"
	        android:layout_centerVertical="true"
	        android:layout_toRightOf="@id/tv_area"
	        android:textColor="@color/pink"
	        android:textSize="@dimen/text_size_17sp"
	        android:text="date" />
	    
	    <ImageView
	        android:id="@+id/icon_arrow"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/icon_joined_arrow_to_right" />
    
    </RelativeLayout>
    
    <RelativeLayout
        android:id="@+id/rl_spread"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_signup_joined"
        android:layout_below="@id/rl_top" >
	    
        <TextView
            android:id="@+id/tv_test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <TextView
            android:id="@+id/tv_joined_overtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/light_grey"
            android:text="@string/signup_joined_overtime"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_start_record"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/btn_joined_record_selector" />
        
        <RelativeLayout
            android:id="@+id/rl_play_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dip"
            android:layout_marginBottom="10dip"
            android:layout_marginLeft="30dip"
            android:layout_marginRight="30dip"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/btn_start_record"
            android:background="@drawable/bg_signup_joined_play" >
            
            <TextView
                android:id="@+id/tv_voice_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dip"
                android:visibility="visible" />
            
            <ImageView
                android:id="@+id/iv_play_voice_animation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dip"
                android:layout_marginBottom="10dip"
                android:layout_marginRight="15dip"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:background="@drawable/play_voice_animation_3" />
            
        </RelativeLayout>
        
    </RelativeLayout>

</RelativeLayout>
