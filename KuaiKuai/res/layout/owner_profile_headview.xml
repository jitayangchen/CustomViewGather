<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
 
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="20dip"
        android:background="@drawable/bg_owner_head" >
        
        <RelativeLayout
            android:layout_width="127dip"
            android:layout_height="131dip"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_home_user_photo" >
	        <ImageView
	            android:id="@+id/iv_owner_head"
	            android:layout_width="120dip"
	            android:layout_height="120dip"
	            android:layout_marginTop="3dip"
	            android:layout_centerHorizontal="true" />
        </RelativeLayout>
        
    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/gray_dfdfdf" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
        
	        <TextView
	            android:id="@+id/tv_live_photo"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:padding="10dip"
	            android:text="@string/owner_profile_live_photo"
	            android:textSize="@dimen/text_size_20sp"
	            android:layout_weight="1"
	            android:textColor="@color/text_profile_title_selector"
	            android:background="@null" />
	        
	        <TextView
	            android:id="@+id/tv_personal_datum"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:padding="10dip"
	            android:text="@string/owner_profile_personal_datum"
	            android:textSize="@dimen/text_size_20sp"
	            android:textColor="@color/text_profile_title_selector"
	            android:layout_weight="1"
	            android:background="@null" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <LinearLayout
                android:id="@+id/bottom_slide_line"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:layout_weight="1" >
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="3dip"
                    android:layout_marginLeft="12dip"
                    android:layout_marginRight="12dip"
                    android:background="@color/pink" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="25dip"
                android:paddingRight="25dip"
                android:layout_weight="1" />
        </LinearLayout>
        
    </LinearLayout>
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="@color/pink" />
    
    <include layout="@layout/item_personal_data"/>
    <include layout="@layout/item_gallery_album"/>

</LinearLayout>